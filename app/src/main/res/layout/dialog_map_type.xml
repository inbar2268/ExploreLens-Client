<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Map Type"
        android:textColor="#262626"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/mapTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/normalMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Normal"
            android:textColor="#262626"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/hybridMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Hybrid"
            android:textColor="#262626"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/satelliteMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Satellite"
            android:textColor="#262626"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/terrainMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terrain"
            android:textColor="#262626"
            android:textSize="16sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background_cancel"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="16sp"
            android:elevation="0dp"
            android:stateListAnimator="@null"/>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background_confirm"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:elevation="0dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</LinearLayout>