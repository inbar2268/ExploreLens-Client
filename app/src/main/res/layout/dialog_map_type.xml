<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp"
    android:fontFamily="@font/harmonyos_sans_regular">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Map Type"
        android:textColor="#262626"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/harmonyos_sans_black" />

    <RadioGroup
        android:id="@+id/mapTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/normalMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Normal"
            android:textColor="#262626"
            android:textSize="14sp"
            android:buttonTint="#262626"
            android:fontFamily="@font/harmonyos_sans_regular" />

        <RadioButton
            android:id="@+id/hybridMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Hybrid"
            android:textColor="#262626"
            android:textSize="14sp"
            android:buttonTint="#262626"
            android:fontFamily="@font/harmonyos_sans_regular" />

        <RadioButton
            android:id="@+id/satelliteMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Satellite"
            android:textColor="#262626"
            android:textSize="14sp"
            android:buttonTint="#262626"
            android:fontFamily="@font/harmonyos_sans_regular" />

        <RadioButton
            android:id="@+id/terrainMapRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terrain"
            android:textColor="#262626"
            android:textSize="14sp"
            android:buttonTint="#262626"
            android:fontFamily="@font/harmonyos_sans_regular" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_cancle"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="12sp"
            android:fontFamily="@font/harmonyos_sans_medium"
            android:elevation="0dp"
            android:stateListAnimator="@null" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_primary"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/harmonyos_sans_medium"
            android:elevation="0dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>
