<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fontFamily="@font/harmonyos_sans_regular"
    android:orientation="vertical">

    <!-- Top Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="14dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main Content with SwipeRefreshLayout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Loading State -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:visibility="gone" />

                <!-- Error State -->
                <TextView
                    android:id="@+id/errorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:fontFamily="@font/harmonyos_sans_regular"
                    android:gravity="center"
                    android:text="Failed to load place details"
                    android:textColor="@color/error_color"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <!-- Content Container -->
                <LinearLayout
                    android:id="@+id/contentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Main Header Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="0dp">

                        <!-- Place Name and Rating Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Place Name -->
                            <TextView
                                android:id="@+id/placeName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/harmonyos_sans_black"
                                android:lineSpacingMultiplier="1.1"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                tools:text="Mock Coffee Corner" />

                            <!-- Rating -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/ratingValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:fontFamily="@font/harmonyos_sans_black"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    tools:text="4.2" />

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_star"
                                    app:tint="@color/rating_star" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Place Type -->
                        <TextView
                            android:id="@+id/placeType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/harmonyos_sans_regular"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            tools:text="Cafe" />

                        <!-- Editorial Summary -->
                        <TextView
                            android:id="@+id/editorialSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/harmonyos_sans_regular"
                            android:lineSpacingMultiplier="1.4"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:text="A cozy neighborhood coffee shop with excellent espresso and fresh pastries. Perfect for working or catching up with friends."
                            tools:visibility="visible" />

                    </LinearLayout>

                    <!-- Contact Section -->
                    <LinearLayout
                        android:id="@+id/contactCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/section_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">

                        <!-- Address -->
                        <LinearLayout
                            android:id="@+id/addressContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_location"
                                app:tint="@color/blue" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/harmonyos_sans_regular"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                tools:text="1 Mock Road, Hod Hasharon" />

                        </LinearLayout>

                        <!-- Website -->
                        <LinearLayout
                            android:id="@+id/websiteContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_web"
                                app:tint="@color/blue" />

                            <TextView
                                android:id="@+id/website"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/harmonyos_sans_regular"
                                android:textColor="@color/blue"
                                android:textSize="12sp"
                                tools:text="www.mockcoffee.com" />

                        </LinearLayout>

                        <!-- Phone -->
                        <LinearLayout
                            android:id="@+id/phoneContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_phone"
                                app:tint="@color/blue" />

                            <TextView
                                android:id="@+id/phoneNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/harmonyos_sans_regular"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                tools:text="050-1112233" />

                        </LinearLayout>

                        <!-- Status -->
                        <LinearLayout
                            android:id="@+id/statusContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_clock"
                                app:tint="@color/blue" />

                            <TextView
                                android:id="@+id/openStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/harmonyos_sans_regular"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                tools:text="Open now" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Opening Hours Section -->
                    <LinearLayout
                        android:id="@+id/openingHoursCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/section_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="24dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/harmonyos_sans_black"
                            android:text="Opening Hours"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/hoursContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>

                    <!-- Reviews Section -->
                    <LinearLayout
                        android:id="@+id/reviewsCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/section_background"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="24dp"
                        android:paddingBottom="32dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/harmonyos_sans_black"
                            android:text="Reviews"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/reviewsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_review" />

                    </LinearLayout>

                    <!-- Cache indicator -->
                    <TextView
                        android:id="@+id/cacheIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:background="@color/light_gray"
                        android:fontFamily="@font/harmonyos_sans_regular"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="Cached Data"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <!-- Price Level (hidden but keep for compatibility) -->
                    <TextView
                        android:id="@+id/priceLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:text="$$" />

                    <!-- Price Level Container (keep for compatibility) -->
                    <LinearLayout
                        android:id="@+id/priceLevelContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" />

                    <!-- Bottom Spacing -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>