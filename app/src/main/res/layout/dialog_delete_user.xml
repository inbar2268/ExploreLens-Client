<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp"
    android:fontFamily="@font/harmonyos_sans_regular">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textColor="#FF3B30"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/harmonyos_sans_black" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Are you sure you want to delete your account? This action cannot be undone."
        android:textColor="#8E8E93"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_cancle"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#262626"
            android:textSize="12sp"
            android:fontFamily="@font/harmonyos_sans_medium"
            android:elevation="0dp"
            android:stateListAnimator="@null" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_delete"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/harmonyos_sans_medium"
            android:elevation="0dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>
